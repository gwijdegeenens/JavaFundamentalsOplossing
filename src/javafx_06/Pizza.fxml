<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.collections.*?>
<?import java.lang.*?>
<?import javafx_06.*?>

<VBox xmlns:fx="http://javafx.com/fxml">
   <MenuBar>
      <menus>
         <Menu text="File">
            <items>
               <MenuItem text="New Order" />
               <MenuItem text="Open" />
               <MenuItem text="Save" />
               <Menu text="Save as ..">
                  <items>
                     <MenuItem text="XML" />
                     <MenuItem text="Text" />
                  </items>
               </Menu>
               <SeparatorMenuItem />
               <CheckMenuItem text="Exit" />
            </items>
         </Menu>
         <Menu text="Help">
            <items>
               <MenuItem text="About" />
            </items>
         </Menu>
      </menus>
   </MenuBar>
   <BorderPane>
      <top>
         <FlowPane hgap="10">
            <padding>
               <Insets left="10" bottom="10" right="10" top="10" />
            </padding>
            <Label text="Name :" />
            <TextField promptText="Enter your name" />
            <Label text="E-mail :" />
            <TextField promptText="Enter your e-mail" />
            <Label text="Delivery date :" />
            <DatePicker prefWidth="100" />
            <Button text="Order" />
         </FlowPane>
      </top>
      <left>
         <BorderPane prefWidth="100">
            <top>
               <Label text="Ingredients" />
            </top>
            <center>
               <MultiSelectListView>
                  <items>
                     <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Bacon" />
                        <String fx:value="Cheese" />
                        <String fx:value="Mushrooms" />
                        <String fx:value="Oregano" />
                        <String fx:value="Salami" />
                        <String fx:value="Tomatoes" />
                        <String fx:value="Shrimps" />
                        <String fx:value="Onions" />
                        <String fx:value="Garlic" />
                        <String fx:value="Artichoke" />
                     </FXCollections>
                  </items>
               </MultiSelectListView>
            </center>
         </BorderPane>
      </left>
      <bottom>
         <FlowPane hgap="10">
            <padding>
               <Insets left="10" bottom="10" right="10" top="10" />
            </padding>
            <Label text="Bottom :" />
            <fx:define>
               <ToggleGroup fx:id="bottomToggleGroup" />
            </fx:define>
            <RadioButton text="Traditional" toggleGroup="$bottomToggleGroup" />
            <RadioButton text="Crusty" toggleGroup="$bottomToggleGroup" />
            <CheckBox text="Spicy" />
            <Label text="Size :" />
            <ChoiceBox>
               <items>
                  <FXCollections fx:factory="observableArrayList">
                     <String fx:value="Small" />
                     <String fx:value="Medium" />
                     <String fx:value="Large" />
                  </FXCollections>
               </items>
            </ChoiceBox>
            <Label text="Number :" />
            <TextField maxWidth="40" />
         </FlowPane>
      </bottom>
      <center>
         <ScrollPane prefHeight="200" prefWidth="200">
            <content>
               <ImageView>
                  <Image url="@pizza.jpg" />
               </ImageView>
            </content>
         </ScrollPane>
      </center>
   </BorderPane>
</VBox>